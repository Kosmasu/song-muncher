{
  "compilerOptions": {
    "outDir": "built",
    "allowJs": true,
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
